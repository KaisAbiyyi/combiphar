@startuml UC15-Manage-Users
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!include ICONURL/common.puml
!include ICONURL/font-awesome/users.puml

title UC15 - Manage Users

actor "Admin" as Admin

package "User Management" {
  usecase "View User List" as UC15_1
  usecase "Update User Status" as UC15_2
  usecase "Filter by Role" as UC15_3
  usecase "Filter by Status" as UC15_4
  usecase "Search Users" as UC15_5
}

Admin --> UC15_1
Admin --> UC15_2
UC15_1 ..> UC15_3 : <<extend>>
UC15_1 ..> UC15_4 : <<extend>>
UC15_1 ..> UC15_5 : <<extend>>

note right of UC15_2
  Status: ACTIVE, INACTIVE
end note

note right of UC15_3
  Role: CUSTOMER, ADMIN
end note

note right of UC15_5
  Search by name or email
end note

@enduml

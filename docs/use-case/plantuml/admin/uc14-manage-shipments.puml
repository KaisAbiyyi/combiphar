@startuml UC14-Manage-Shipments
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!include ICONURL/common.puml
!include ICONURL/font-awesome/truck.puml

title UC14 - Manage Shipments

actor "Admin" as Admin

package "Shipment Management" {
  usecase "View Shipment List" as UC14_1
  usecase "Create Shipment" as UC14_2
  usecase "Update Tracking Number" as UC14_3
  usecase "Update Shipment Status" as UC14_4
  usecase "Filter by Status" as UC14_5
}

Admin --> UC14_1
Admin --> UC14_2
Admin --> UC14_3
Admin --> UC14_4
UC14_1 ..> UC14_5 : <<extend>>

note right of UC14_2
  Input: order_id, address_id, courier_name
end note

note right of UC14_4
  Status flow:
  PENDING → PROCESSING → SHIPPED
  → DELIVERED → RECEIVED
end note

@enduml

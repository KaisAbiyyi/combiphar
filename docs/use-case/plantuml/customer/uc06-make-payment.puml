@startuml UC06-Make-Payment
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!include ICONURL/common.puml
!include ICONURL/font-awesome/user.puml
!include ICONURL/font-awesome/bank.puml

title UC06 - Make Payment (Transfer)

actor "Customer" as Customer

package "Payment System" {
  usecase "View Payment Info" as UC6_1
  usecase "Upload Transfer Proof" as UC6_2
  usecase "Select Bank" as UC6_3
  usecase "Complete Order" as UC6_4
}

Customer --> UC6_1
UC6_1 --> UC6_3
UC6_3 --> UC6_2
UC6_2 --> UC6_4

note right of UC6_1
  Display bank account info:
  - BCA
  - MANDIRI
  - BRI
end note

note right of UC6_2
  Upload transfer receipt
  (image/pdf)
end note

@enduml

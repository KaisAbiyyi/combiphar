@startuml UC04-Manage-Addresses
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!include ICONURL/common.puml
!include ICONURL/font-awesome/user.puml
!include ICONURL/font-awesome/map_marker.puml

title UC04 - Manage Addresses

actor "Customer" as Customer

package "Address Management System" {
  usecase "Add New Address" as UC4_1
  usecase "Set Primary Address" as UC4_2
  usecase "Delete Address" as UC4_3
  usecase "View Address List" as UC4_4
}

Customer --> UC4_1
Customer --> UC4_2
Customer --> UC4_3
Customer --> UC4_4

note right of UC4_1
  Input: recipient, phone, address,
  city, province, postal code
end note

note right of UC4_2
  Mark as primary for checkout
end note

@enduml

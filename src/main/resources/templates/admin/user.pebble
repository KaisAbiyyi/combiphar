            <td>Nashya Putri</td>
            <td>nashya.putri@combiphar.id</td>
            <td>
              <span class="badge badge--purple">Admin</span>
            </td>
            <td>
              <span class="badge badge--success">Aktif</span>
            </td>
            <td>
              <div class="user-actions">
                <button class="btn-text btn-text--primary">Atur Role</button>
                <button class="btn-text btn-text--secondary">Nonaktifkan</button>
              </div>
            </td>
          </tr>

          {# Row 2 #}
